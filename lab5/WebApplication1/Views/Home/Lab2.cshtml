@model YourNamespace.Models.LabViewModel

@{
    ViewBag.Title = "Лабораторна робота 2";
}

<h2>Лабораторна робота 1: Розділення учасників на команди</h2>

@using (Html.BeginForm("Lab2", "Lab2", FormMethod.Post))
{
    <div>
        <label for="inputData">Введіть дані:</label>
        <textarea id="inputData" name="InputData" required>@Model.InputData</textarea>
    </div>
    <button type="submit">Виконати</button>

    if (!string.IsNullOrEmpty(Model.Result))
    {
        <div>
            <h3>Результат:</h3>
            <pre>@Model.Result</pre>
        </div>
    }
}

<a href="@Url.Action("Profile", "User")">Назад до профілю</a>
